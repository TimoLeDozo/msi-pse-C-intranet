# === AUTHENTICATION ===
SESSION_SECRET=your-long-random-secret-32-chars-minimum
ADMIN_USERNAME=admin
# Generate with: node -e "require('bcrypt').hash('YOUR_PASSWORD', 12).then(console.log)"
ADMIN_PASSWORD_HASH=$2b$12$...your_hash_here

# === SERVER ===
PORT=3000
FILE_BASE_URL=http://localhost:3000/files

# === AI MODE ===
